// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

// --------------------------------------
// Enums
// --------------------------------------

enum UserRole {
  ADMIN
  MANAGER
  TECHNICIAN
}

enum WorkOrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  ON_HOLD
  CANCELLED
}

// --------------------------------------
// Core Models
// --------------------------------------

model Org {
  id         String      @id @default(cuid())
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  name       String
  users      User[]
  sites      Site[]
  workOrders WorkOrder[]
}

model Site {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String

  orgId     String
  org       Org      @relation(fields: [orgId], references: [id], onDelete: Cascade)
  
  rooms     Room[]
}

model Room {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  building  String?  // "A", "B", "Main", etc.
  floor     Int?     // 1, 2, 3, etc.

  siteId    String
  site      Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)

  assets    Asset[]
}

model Asset {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  workOrders WorkOrder[]
}

model WorkOrder {
  id              String          @id @default(cuid())
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  title           String
  description     String
  status          WorkOrderStatus @default(PENDING)
  failureMode     String
  revisitSchedule DateTime?
  
  assetId         String
  asset           Asset           @relation(fields: [assetId], references: [id], onDelete: Cascade)
  
  orgId           String
  org             Org             @relation(fields: [orgId], references: [id], onDelete: Cascade)
  
  assignedToId    String?
  assignedTo      User?           @relation("AssignedWorkOrders", fields: [assignedToId], references: [id], onDelete: SetNull)
}

// --------------------------------------
// Authentication & Security
// --------------------------------------

model User {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  email       String   @unique
  password    String   // Hashed password
  firstName   String?
  lastName    String?
  phoneNumber String?
  role        UserRole @default(TECHNICIAN)

  orgId       String
  org         Org      @relation(fields: [orgId], references: [id])

  sessions          Session[]
  auditLogs         AuditLog[]
  assignedWorkOrders WorkOrder[] @relation("AssignedWorkOrders")
}

model Session {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  expiresAt DateTime
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model AuditLog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  action    String
  details   Json?
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
